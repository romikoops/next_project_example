{
  "parser": "babel-eslint",
  "extends": [
    "airbnb"
  ],
  "plugins": [
    "import"
  ],
  "rules": {
    "semi": [2, "never"],
    "comma-dangle": ["error", "never"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "jsx-a11y/no-static-element-interactions": 0,
    "react/prefer-stateless-function": [1, { "ignorePureComponents": true }],
    "react/no-danger": 0,
    "import/no-extraneous-dependencies": 0
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  },
  "globals": {
    "window": true,
    "document": true,
    "fetch": true,
    "it": true,
    "describe": true,
    "before": true,
    "beforeEach": true,
    "afterEach": true,
    "expect": true,
    "jest": true,
    "FB": true,
    "$": true
  }
}
